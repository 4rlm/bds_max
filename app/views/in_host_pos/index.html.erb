<div class="pull-right">
    <%= link_to 'Add Record', new_in_host_po_path, class: 'btn btn-primary' %>
    <%= link_to 'Import CSV', in_host_po_import_page_path, class: 'btn btn-primary' %>
    <%= link_to 'Download CSV', in_host_pos_path(format: "csv"), class: 'btn btn-primary' %>
</div>
<br>
<br>

<%= form_tag "/in_host_pos", method: :get, class: 'form-inline'  do %>

<table class="list-table table table-bordered table-hover text-nowrap table-striped">

    <thead>
        <tr>
            <th><%= check_box_tag 'check_all', 'check_all', false, onClick: 'checkAll(this);' %></th>
            <th>#</th>
            <th>Terms</th>
            <th>Franchise</th>
            <th>Category</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% num = 0 %>
        <% @in_host_pos.each do |in_host_po| %>

        <tr>
            <td><%= check_box_tag "multi_checks[]",  in_host_po.id %></td>
            <% num +=1 %>
            <td><%= num %></td>
            <td><%= in_host_po.term.capitalize %></td>
            <td><%= in_host_po.consolidated_term.capitalize %></td>
            <td><%= in_host_po.category.capitalize %></td>
            <td><%= link_to 'Show', in_host_po %></td>
            <td><%= link_to 'Edit', edit_in_host_po_path(in_host_po) %></td>
            <td><%= link_to 'Destroy', in_host_po, method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="pull-left">
    <%= submit_tag "Delete Checked", class: 'btn btn-danger' %>
</div>
<% end %>

<div class="pull-right">
    <%= link_to 'Add Record', new_in_host_po_path, class: 'btn btn-primary' %>
    <%= link_to 'Import CSV', in_host_po_import_page_path, class: 'btn btn-primary' %>
    <%= link_to 'Download CSV', in_host_pos_path(format: "csv"), class: 'btn btn-primary' %>
</div>
