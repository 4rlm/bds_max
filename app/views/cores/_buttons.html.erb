<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <% if mode == "detail" && advanced_and_up %>
                <span class="btn btn-success" onClick="mergeDataCore();">Merge Data</span>
                <!-- <span class="btn btn-danger" onClick="flagDataCore();">Flag Data</span> -->
            <% end %>
        </div>
        <div class="pull-right">
            <% if admin_only %>
                <%= link_to 'Add Record', new_core_path, class: 'btn btn-primary' %>
                <%= link_to 'Import CSV', core_import_page_path, class: 'btn btn-primary' %>
            <% end %>
            <% if advanced_and_up %>
                <%= link_to 'Download CSV', cores_path(format: "csv"), class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</div><br>
