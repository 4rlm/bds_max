<h1 class="text-center">Core Accounts</h1>


<%= form_tag "/cores", method: :get, class: 'form-inline'  do %>

<!-- link to _filter partial -->
<%= render partial: 'filter', locals: {  } %>


<%= submit_tag "Submit", class: 'btn btn-success' %>

<%= render partial: 'buttons' %>


 <!-- ### Horizontal View Starts Here ### -->
 <h1>Horizontal View</h1>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th><%= check_box_tag 'check_all', 'check_all', false, onClick: 'checkAll(this);' %></th>

            <th>#</th>
            <th>BDS Status</th>
            <th>Staff Indexer Status</th>
            <th>Location Indexer Status</th>
            <th>Inventory Indexer Status</th>
            <th>Account</th>
            <th>Ultimate Group</th>
            <th>Group Name</th>
            <th>Url Comparison</th>
            <th>SFDC Url</th>
            <th>Matched Url</th>
            <th>Root Comparison</th>
            <th>SFDC Root</th>
            <th>Matched Root</th>
            <th>SFDC Street</th>
            <th>SFDC City</th>
            <th>SFDC State</th>
            <th>SFDC Zip</th>
            <th>SFDC Ph</th>
            <th>Tier</th>
            <th>Ult RT</th>
            <th>Grp RT</th>
            <th>Type</th>
            <th>Salesperson</th>
            <th>SFDC ID</th>

            <th>
                <div class="form-group">
                    <td><%= render partial: 'layouts/text_field_tag', locals: { col: :core_date } %></td>
                    <br><br>Core Date
                </div>
            </th>
            <th>Domainer Date</th>
            <th>
                <div class="form-group">
                    <td><%= render partial: 'layouts/text_field_tag', locals: { col: :indexer_date } %></td>
                    <br><br>Indexer Date
                </div>
            </th>
            <th>Staffer Date</th>
            <th>WhoIs Date</th>


            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% num = 0 %>
        <% @cores.each do |core| %>
            <% num +=1 %>
            <%= render partial: 'old_layout', locals: { core: core, num: num } %>
        <% end %>
    </tbody>
</table>

<div class="pull-left">
    <div class="form-group">
        <%= select_tag :selected_status, options_for_select(core_status_list), include_blank: '-- Update Domain Status --', class: 'selectpicker' %>
        <%= submit_tag "Submit", class: 'btn btn-success' %>
    </div>
</div>

<% end %> <!-- Filter Headers Form tag ends -->

<%= render partial: 'buttons' %>
<br> <br> <br>

<%= will_paginate @cores, renderer: BootstrapPagination::Rails  %>
<br> <br> <br> <br>
 <!-- ### Horizontal View Ends Here ### -->


 <!-- ### Vertical View Starts Here (from render) ### -->
<h1>Vertical View</h1>
<% num = 0 %>
<% @cores.each do |core| %>
    <% num +=1 %>
    <%= render partial: 'new_layout', locals: { core: core, num: num } %>
<% end %>
 <!-- ### Vertical Ends Here (from render) ### -->
