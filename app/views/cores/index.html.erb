<h1 class="page-header">Core Accounts</h1>


<%= form_tag "/cores", method: :get, class: 'form-inline'  do %>

<!-- FILTER PARTIAL -->
<%= render partial: 'filter' %>

<!-- ACCOUNTS - LIST VIEW PARTIAL -->
<% if @view_mode == "list" %>
    <%= render partial: 'list_view' %>
<% end %>

<!-- ACCOUNTS - DETAILED VIEW PARTIAL -->
<% if @view_mode == "detail" %>
    <h3 class="section-header">Detailed View Starts Here</h3>
    <%= render partial: 'buttons' %><br>

    <% num = 0 %>
    <% @cores.each do |core| %>
        <% num +=1 %>
        <%= render partial: 'detailed_view', locals: { core: core, num: num } %>
    <% end %>
<% end %>

<%= render partial: 'buttons' %>
<%= will_paginate @cores, renderer: BootstrapPagination::Rails  %>

<!-- IMPORTANT END TO FORM - EVERYTHING MUST BE IN HERE. -->
<% end %>
<!-- Filter Headers Form tag ends -->
