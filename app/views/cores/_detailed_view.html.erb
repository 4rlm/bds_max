<h3 class="section-header">Detailed View Starts Here</h3>
<%= render partial: 'buttons' %>
<br>

<% num = 0 %>
<% @cores.each do |core| %>
    <% num +=1 %>

<div class="text-nowrap cores-layout account-profile-container">
    <div class="row profile-row">

        <div class="profile-col col-md-12">
            <table class="cores-layout-table account-profile-table table table-bordered table-hover">
                <tr>
                    <th class="th-1 t5"><%= check_box_tag "status_checks[]",  core.id %></th>
                    <th class="th-1 t4"><%= num %></th>
                    <th class="th-1"><span class="glyphicon glyphicon-flag"></span> Account Profile</th>

                    <th class="th-2 w-sm">Sales Person:</th>
                    <td><%= core.sfdc_sales_person %></td>
                    <th class="th-2 w-xsm">Type:</th>
                    <td><%= core.sfdc_type %></td>

                    <th class="th-2 w-xsm">SFDC ID:</th>
                    <td class="w-md"><%= core.sfdc_id %></td>

                    <td class='details-btn' >
                        <%= link_to core, method: :details do %>
                            <span class="glyphicon glyphicon-folder-open"></span>
                        <% end %>
                    </td>

                    <td class='edit-btn' >
                        <%= link_to core, method: :edit do %>
                            <span class="glyphicon glyphicon-pencil"></span>
                        <% end %>
                    </td>

                    <td class='delete-btn' >
                        <%= link_to core, method: :delete do %>
                            <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                    </td>

                </tr>
            </table>
        </div>
    </div>

    <div class="row profile-row">
        <div class="profile-col col-md-12">
            <table class="cores-layout-table account-profile-table table table-bordered table-hover">
                <tr>
                    <th class="th-1 t3">Account</th>
                    <th class="th-2">Account Name</th>
                    <th class="th-2">Group Name</th>
                    <th class="th-2">Ultimate Group Name</th>
                    <th class="th-2 w-md">Sales Tier</th>
                    <th class="th-2 w-xsm">Group RT</th>
                    <th class="th-2 w-xsm">Ult RT</th>
                </tr>
                <tr>
                    <th class="th-2 th-2a">SFDC</th>
                    <td><%= core.sfdc_acct %></td>
                    <td><%= core.sfdc_group %></td>
                    <td><%= core.sfdc_ult_grp %></td>
                    <td><%= core.sfdc_tier %></td>
                    <td><%= core.sfdc_grp_rt %></td>
                    <td><%= core.sfdc_ult_rt %></td>
                </tr>
                <tr>
                    <th class="th-2 th-2b">Matched</th>
                    <td><%= core.site_acct %></td>
                    <td>n/a</td>
                    <td>n/a</td>
                    <td>n/a</td>
                    <td>n/a</td>
                    <td>n/a</td>

                </tr>
                <tr>
                    <th class="th-2 th-2c">Indicator</th>

                    <% if core.acct_indicator == "Same" %>
                        <td class="same"><%= core.acct_indicator %></td>
                    <% elsif core.acct_indicator == "Different" %>
                        <td class="different"><%= core.acct_indicator %></td>
                    <% else %>
                        <td><%= core.acct_indicator %></td>
                    <% end %>

                    <% if core.sfdc_group_indicator == "Same" %>
                        <td class="same"><%= core.sfdc_group_indicator %></td>
                    <% elsif core.sfdc_group_indicator == "Different" %>
                        <td class="different"><%= core.sfdc_group_indicator %></td>
                    <% else %>
                        <td><%= core.sfdc_group_indicator %></td>
                    <% end %>

                    <% if core.sfdc_ult_grp_indicator == "Same" %>
                        <td class="same"><%= core.sfdc_ult_grp_indicator %></td>
                    <% elsif core.sfdc_ult_grp_indicator == "Different" %>
                        <td class="different"><%= core.sfdc_ult_grp_indicator %></td>
                    <% else %>
                        <td><%= core.sfdc_ult_grp_indicator %></td>
                    <% end %>

                        <!-- sales_tier_indicator -->
                        <td>n/a</td>

                    <% if core.grp_rt_indicator == "Same" %>
                        <td class="same"><%= core.grp_rt_indicator %></td>
                    <% elsif core.grp_rt_indicator == "Different" %>
                        <td class="different"><%= core.grp_rt_indicator %></td>
                    <% else %>
                        <td><%= core.grp_rt_indicator %></td>
                    <% end %>

                    <% if core.ult_grp_rt_indicator == "Same" %>
                        <td class="same"><%= core.ult_grp_rt_indicator %></td>
                    <% elsif core.ult_grp_rt_indicator == "Different" %>
                        <td class="different"><%= core.ult_grp_rt_indicator %></td>
                    <% else %>
                        <td><%= core.ult_grp_rt_indicator %></td>
                    <% end %>


                </tr>
            </table>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <table class="cores-layout-table account-profile-table table table-bordered table-hover">
                <tr>
                    <th class="th-1 t3">Address</th>
                    <th class="th-2">Street</th>
                    <th class="th-2 w-lg">City</th>
                    <th class="th-2 w-xxsm">State</th>
                    <th class="th-2 w-xsm">Zip</th>
                    <th class="th-2 w-md">Phone</th>
                </tr>
                <tr>
                    <th class="th-2 th-2a">SFDC</th>
                    <td><%= core.sfdc_street %></td>
                    <td><%= core.sfdc_city %></td>
                    <td><%= core.sfdc_state %></td>
                    <td><%= core.sfdc_zip %></td>
                    <td><%= core.sfdc_ph %></td>
                </tr>
                <tr>
                    <th class="th-2 th-2b">Matched</th>
                    <td><%= core.site_street %></td>
                    <td><%= core.site_city %></td>
                    <td><%= core.site_state %></td>
                    <td><%= core.site_zip %></td>
                    <td><%= core.site_ph %></td>
                </tr>
                <tr>
                    <th class="th-2 th-2c">Indicator</th>
                    <td class="yellow"><%= core.street_indicator %></td>
                    <td class="yellow"><%= core.city_indicator %></td>
                    <td class="yellow"><%= core.state_indicator %></td>
                    <td class="yellow"><%= core.zip_indicator %></td>
                    <td class="yellow"><%= core.ph_indicator %></td>
                </tr>
            </table>
        </div>
    </div>  <!-- row ends -->

    <div class="row">
        <div class="col-md-12">
            <table class="cores-layout-table account-profile-table table table-bordered table-hover">
                <tr>
                    <th class="th-1 t3">Digital</th>
                    <th class="th-2">Website</th>
                    <th class="th-2">Root</th>
                    <th class="th-2">Template</th>
                    <th class="th-2">IP</th>
                    <th class="th-2">DNS-1</th>
                    <th class="th-2">DNS-2</th>
                </tr>
                <tr>
                    <th class="th-2 th-2a">SFDC</th>
                    <td><%= link_to core.sfdc_url,"http://#{core.sfdc_url}", :target => "_blank" %></td>
                    <td><%= core.sfdc_root %></td>
                    <td>n/a</td>
                </tr>
                <tr>
                    <th class="th-2 th-2b">Matched</th>
                    <td><%= link_to core.matched_url, core.matched_url, :target => "_blank" %></td>
                    <td><%= core.matched_root %></td>
                    <td><%= core.template %></td>
                    <td>n/a</td>
                    <td>n/a</td>
                    <td>n/a</td>
                </tr>
                <tr>
                    <th class="th-2 th-2c">Indicator</th>

                    <!-- <td class="same"><%#= core.url_comparison %></td> -->

                    <% if core.url_comparison == "Same" %>
                        <td class="same"><%= core.url_comparison %></td>
                    <% elsif core.url_comparison == "Different" %>
                        <td class="different"><%= core.url_comparison %></td>
                    <% else %>
                        <td><%= core.url_comparison %></td>
                    <% end %>

                    <% if core.root_comparison == "Same" %>
                        <td class="same"><%= core.root_comparison %></td>
                    <% elsif core.root_comparison == "Different" %>
                        <td class="different"><%= core.root_comparison %></td>
                    <% else %>
                        <td><%= core.root_comparison %></td>
                    <% end %>

                    <td class="yellow">n/a</td>
                    <td class="yellow">n/a</td>
                    <td class="yellow">n/a</td>
                    <td class="yellow">n/a</td>
                </tr>
            </table>
        </div>
    </div>  <!-- row ends -->


    <div class="row">
        <div class="col-md-12">
            <table class="cores-layout-table account-profile-table table table-bordered table-hover">
                <tr>
                    <th class="th-1 t3">Modules</th>
                    <th class="th-2">Core</th>
                    <th class="th-2">Domainer</th>
                    <th class="th-2">Staff Index</th>
                    <th class="th-2">Location Index</th>
                    <th class="th-2">Inventory Index</th>
                    <th class="th-2">Staffer</th>
                    <th class="th-2">WhoIs</th>
                </tr>
                <tr>
                    <th class="th-2 th-2a">Status</th>
                    <td><%= core.bds_status %></td>
                    <td><%= core.domain_status %></td>
                    <td><%= core.staff_indexer_status %></td>
                    <td><%= core.location_indexer_status %></td>
                    <td><%= core.inventory_indexer_status %></td>
                    <td><%= core.staffer_status %></td>
                    <td>n/a</td>
                </tr>
                <tr>
                    <th class="th-2 th-2b">Date</th>

                    <% if core.core_date %>
                        <td><%= core.core_date.strftime("%m/%d/%Y") %></td>
                    <% else %>
                        <td><%= core.core_date %></td>
                    <% end %>

                    <% if core.domainer_date %>
                        <td><%= core.domainer_date.strftime("%m/%d/%Y") %></td>
                    <% else %>
                        <td><%= core.domainer_date %></td>
                    <% end %>

                    <% if core.indexer_date %>
                        <td><%= core.indexer_date.strftime("%m/%d/%Y") %></td>
                    <% else %>
                        <td><%= core.indexer_date %></td>
                    <% end %>

                    <% if core.indexer_date %>
                        <td><%= core.indexer_date.strftime("%m/%d/%Y") %></td>
                    <% else %>
                        <td><%= core.indexer_date %></td>
                    <% end %>

                    <% if core.indexer_date %>
                        <td><%= core.indexer_date.strftime("%m/%d/%Y") %></td>
                    <% else %>
                        <td><%= core.indexer_date %></td>
                    <% end %>

                    <% if core.staffer_date %>
                        <td><%= core.staffer_date.strftime("%m/%d/%Y") %></td>
                    <% else %>
                        <td><%= core.staffer_date %></td>
                    <% end %>

                        <td>n/a</td>
                </tr>
                <tr>
                    <th class="th-2 th-2c">Link</th>
                    <td></td>
                    <td></td>

                    <% if core.staff_text && core.staff_text != "(none)"%>
                        <td class="yes"><%= link_to core.staff_text, core.staff_link, :target => "_blank" %></td>
                    <% else %>
                        <td><%= core.staff_text %></td>
                    <% end %>

                    <% if core.location_text && core.location_text != "(none)"%>
                        <td class="yes"><%= link_to core.location_text, core.location_link, :target => "_blank" %></td>
                    <% else %>
                        <td><%= core.location_text %></td>
                    <% end %>

                    <td>n/a</td>
                    <td>n/a</td>
                    <td>n/a</td>
                </tr>
            </table>
        </div>
    </div>  <!-- row ends -->
</div> <!-- Account Profile Ends -->

<% end %>

