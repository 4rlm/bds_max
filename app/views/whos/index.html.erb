<h1 class="page-header">WhoIs Directory</h1>
<h4 class="text-center">Detailed Domain Registration Data</h4>
<br>

<h4>Total WhoIs Accounts: <%= number_with_delimiter(@who_count) %></h4>
<h4>Selected WhoIs Accounts: <%= number_with_delimiter(@selected_whos_count) %></h4>

<!-- FILTER PARTIAL -->
<%= render partial: 'filter' %>
<br>


<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <% if admin_only %>
                <%= link_to 'Add Record', new_who_path, class: 'btn btn-primary' %>
                <%= link_to 'Import CSV', who_import_page_path, class: 'btn btn-primary' %>
            <% end %>
            <% if advanced_and_up %>
                <%= link_to 'Download CSV', whos_path(format: "csv"), class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</div>


<% num = 0 %>
<% @whos.each do |who| %>
    <% num +=1 %>
    <div id="core-detail" class="text-nowrap geo-result-table">
        <div class="row profile-row">
            <div class="profile-col col-md-12">
                <table class="table table-bordered indexer-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>WhoIs Status</th>
                            <th>URL Status</th>
                            <th>URL</th>
                            <th>URL ID</th>
                            <th>IP</th>
                            <th>Server1</th>
                            <th>Server2</th>
                            <th>Registrar URL</th>
                            <th>Registrar</th>
                            <th colspan="2"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td><%= num %></td>
                            <td><%= who.who_status %></td>
                            <td><%= who.url_status %></td>
                            <td><%= who.domain %></td>
                            <td><%= who.domain_id %></td>
                            <td><%= who.ip %></td>
                            <td><%= who.server1 %></td>
                            <td><%= who.server2 %></td>
                            <td><%= who.registrar_url %></td>
                            <td><%= who.registrar_id %></td>
                            <td><%= link_to 'Edit', edit_who_path(who) %></td>
                            <td><%= link_to 'Destroy', who, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-bordered indexer-table">
                    <tr> <!-- REGISTRANT INFO -->
                        <th>Name</th>
                        <th>Organization</th>
                        <th>Address</th>
                        <th>Address Pin</th>
                        <th>City</th>
                        <th>Zip</th>
                        <th>State</th>
                        <th>Phone</th>
                        <th>Fax</th>
                        <th>Email</th>
                        <th>URL</th>
                    </tr>

                    <tr>
                        <td><%= who.registrant_name %></td>
                        <td><%= who.registrant_organization %></td>
                        <td><%= who.who_addr_pin %></td>
                        <td><%= who.registrant_address %></td>
                        <td><%= who.registrant_city %></td>
                        <td><%= who.registrant_zip %></td>
                        <td><%= who.registrant_state %></td>
                        <td><%= who.registrant_phone %></td>
                        <td><%= who.registrant_fax %></td>
                        <td><%= who.registrant_email %></td>
                        <td><%= who.registrant_url %></td>
                    </tr>

                </table>
            </div> <!-- /.profile-col col-md-12 -->
        </div> <!-- /.row profile-row -->
    </div> <!-- /#core-detail -->
    <br>
<% end %>


<%= will_paginate @whos, renderer: BootstrapPagination::Rails  %>
