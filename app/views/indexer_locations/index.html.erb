<p id="notice"><%= notice %></p>

<h1 class="text-center">Location Indexer</h1>
<br><br>

<div class="pull-right">
    <%= link_to 'Dashboard', root_path, class: 'btn btn-primary' %>
    <%= link_to 'Add Record', new_indexer_location_path, class: 'btn btn-primary' %>
    <%= link_to 'Import CSV', indexer_location_import_page_path, class: 'btn btn-primary' %>
    <%= link_to 'Download CSV', indexer_locations_path(format: "csv"), class: 'btn btn-primary' %>
</div>
<br>
<br>

<%= form_tag "/indexer_locations", method: :get, class: 'form-inline'  do %>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th><%= check_box_tag 'check_all', 'check_all', false, onClick: 'checkAll(this);' %></th>

<!-- indexer_status
sfdc_acct
