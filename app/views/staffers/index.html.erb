<h1 class="text-center">Contacts</h1><br><br>

<div class="pull-right">
    <%= render partial: 'buttons' %>
</div><br>

<%= form_tag "/staffers", method: :get, class: 'form-inline'  do %>

<table class="list-table table table-bordered table-hover text-nowrap table-striped">

  <thead>
    <tr>
        <th><%= check_box_tag 'check_all', 'check_all', false, onClick: 'checkAll(this);' %></th>
        <th>#</th>

      <th>Staffer status</th>
      <th>Cont status</th>
      <th>Cont source</th>
      <th>Sfdc Account ID</th>
      <th>Sfdc sales person</th>
      <th>Sfdc type</th>
      <th>Sfdc acct</th>
      <th>Site acct</th>
      <th>Sfdc group</th>
      <th>Sfdc ult grp</th>
      <th>Site street</th>
      <th>Site city</th>
      <th>Site state</th>
      <th>Site zip</th>
      <th>Site ph</th>
      <th>Sfdc cont fname</th>
      <th>Sfdc cont lname</th>
      <th>Sfdc cont job</th>
      <th>Sfdc cont phone</th>
      <th>Sfdc cont email</th>
      <th>Sfdc cont inactive</th>
      <th>Sfdc Contact ID</th>
      <th>Sfdc cont influence</th>
      <th>Site cont fname</th>
      <th>Site cont lname</th>
      <th>Site cont fullname</th>
      <th>Site cont job</th>
      <th>Site cont job raw</th>
      <th>Site cont phone</th>
      <th>Site cont email</th>
      <th>Site cont influence</th>
      <th>Template</th>
      <th>Staffer date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% num = 0 %>
    <% @staffers.each do |staffer| %>
      <tr>

      <td><%= check_box_tag "multi_checks[]",  staffer.id %></td>
      <% num +=1 %>
      <td><%= num %></td>

        <td><%= staffer.staffer_status %></td>
        <td><%= staffer.cont_status %></td>
        <td><%= staffer.cont_source %></td>
        <td><%= staffer.sfdc_id %></td>
        <td><%= staffer.sfdc_sales_person %></td>
        <td><%= staffer.sfdc_type %></td>
        <td><%= staffer.sfdc_acct %></td>
        <td><%= staffer.site_acct %></td>
        <td><%= staffer.sfdc_group %></td>
        <td><%= staffer.sfdc_ult_grp %></td>
        <td><%= staffer.site_street %></td>
        <td><%= staffer.site_city %></td>
        <td><%= staffer.site_state %></td>
        <td><%= staffer.site_zip %></td>
        <td><%= staffer.site_ph %></td>
        <td><%= staffer.sfdc_cont_fname %></td>
        <td><%= staffer.sfdc_cont_lname %></td>
        <td><%= staffer.sfdc_cont_job %></td>
        <td><%= staffer.sfdc_cont_phone %></td>
        <td><%= staffer.sfdc_cont_email %></td>
        <td><%= staffer.sfdc_cont_inactive %></td>
        <td><%= staffer.sfdc_cont_id %></td>
        <td><%= staffer.sfdc_cont_influence %></td>
        <td><%= staffer.site_cont_fname %></td>
        <td><%= staffer.site_cont_lname %></td>
        <td><%= staffer.site_cont_fullname %></td>
        <td><%= staffer.site_cont_job %></td>
        <td><%= staffer.site_cont_job_raw %></td>
        <td><%= staffer.site_cont_phone %></td>
        <td><%= staffer.site_cont_email %></td>
        <td><%= staffer.site_cont_influence %></td>
        <td><%= staffer.template %></td>
        <td><%= staffer.staffer_date %></td>
        <td><%= link_to 'Show', staffer %></td>
        <td><%= link_to 'Edit', edit_staffer_path(staffer) %></td>
        <td><%= link_to 'Destroy', staffer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="pull-left">
    <div class="submit-button-area">
        <%= select_tag :selected_status, options_for_select(staffer_status_list), include_blank: '-- Update Status --', class: 'selectpicker' %>
    </div>
    <div class="submit-button-area">
        <%= submit_tag "Submit", class: 'btn btn-success' %>
    </div>
</div>
<% end %>

<div class="pull-right">
    <%= render partial: 'buttons' %>
</div> <br>

