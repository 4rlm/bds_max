<h1 class="page-header">Contacts</h1>

<%= form_tag "/staffers", method: :get, class: 'form-inline'  do %>

<!-- FILTER PARTIAL -->
<%= render partial: 'filter' %>

<!-- CONTACTS - LIST VIEW PARTIAL -->
<h3 class="section-header">Contact Profiles - List View</h3>
<p>List view shows more (than detailed view), but will NOT be attached to account detailed view.</p>

<div class="pull-right">
    <%= render partial: 'buttons' %>
</div> <br>

<%= render partial: 'list_view', locals: { staffers: @staffers } %>

<div class="pull-right">
    <%= render partial: 'buttons' %>
</div> <br>

<div class="pull-left">
    <div class="form-group">
        <div class="submit-button-area">
            <%= select_tag :selected_status, options_for_select(staffer_status_list), include_blank: '-- Update Status --', class: 'selectpicker' %>
        </div>
        <div class="submit-button-area">
            <%= submit_tag "Submit", class: 'btn btn-success' %>
        </div>
    </div>
</div>

<!-- Was end tag here.  Moved to bottom of index, after making list view partial.    -->
<%= will_paginate @paginate_staffers, renderer: BootstrapPagination::Rails  %>

<!-- CONTACTS - DETAILED VIEW PARTIAL -->
<%= render partial: 'detailed_view' %>



<!-- IMPORTANT END TO FORM - EVERYTHING MUST BE IN HERE. -->
<% end %>
<!-- Filter Headers Form tag ends -->
