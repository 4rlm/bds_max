
<div class="scr-prof">
  <table class="table table-bordered no-wrap">

    <thead>

      <tr>
        <th>#</th>
        <!-- <th>Stage</th> -->
        <!-- <th>Status</th> -->
        <th>SRC</th>
        <th>ID</th>
        <th>ID</th>
        <!-- <th>URL</th> -->
        <!-- <th>URL</th> -->
        <th>ST</th>
        <th>Account Name</th>
        <th>Title</th>
        <th>Description</th>
        <th>First Name</th>
        <th>Last Name</th>
        <!-- <th>Full Name</th> -->
        <th>Email</th>
        <th>Phone</th>
        <th>Scraped</th>
        <!-- <th colspan="2"></th> -->
      </tr>

    </thead>

    <tbody>
      <% num = 0 %>
      <% staffers.each do |staffer| %>
      <% num +=1 %>
      <tr>
        <td class="staffer-w-xsm"><%= num %></td>
        <!-- <td><%#= staffer.staffer_status %></td> -->
        <!-- <td><%#= staffer.cont_status %></td> -->
        <td class="staffer-w-sm"><%= staffer.cont_source %></td>

        <!-- Account ID -->
        <% unless staffer.sfdc_id == nil %>
        <td class="staffer-w-xsm fa-blue">
          <%= fa_icon "address-card lg", "data-toggle": "tooltip", "data-placement": "top", title: "#{staffer.sfdc_id}" %>
        </td>
        <% else %>
        <td class="staffer-w-xsm fa-gray"><%= fa_icon "address-card lg", "data-toggle": "tooltip", "data-placement": "top", title: "No Account ID" %></td>
        <% end %>


        <!-- Contact ID -->
        <% unless staffer.sfdc_cont_id == nil %>
        <td class="staffer-w-xsm fa-blue">
          <%= fa_icon "user lg", "data-toggle": "tooltip", "data-placement": "top", title: "#{staffer.sfdc_cont_id}" %>
        </td>
        <% else %>
        <td class="staffer-w-xsm fa-gray"><%= fa_icon "user lg", "data-toggle": "tooltip", "data-placement": "top", title: "No Contact ID" %></td>
        <% end %>



        <td class="staffer-w-xsm"><%= staffer.state %></td>

        <!-- TESTING STARTS -->
        <% if staffer.acct_name && staffer.domain %>
          <td><%= link_to "#{staffer.acct_name}", indexer_show_detail_path(url: staffer.domain), :target => "_blank" %></td>
        <% elsif staffer.domain %>
          <td><%= link_to 'Indexer Link', indexer_show_detail_path(url: staffer.domain), :target => "_blank" %></td>
        <% elsif staffer.acct_name %>
          <td><%= staffer.acct_name %></td>
        <% else %>
          <td>Not Linked</td>
        <% end %>

        <!-- TESTING ENDS -->

        <td><%= staffer.job %></td>
        <td><%= staffer.job_raw %></td>

        <td><%= staffer.fname %></td>
        <td><%= staffer.lname %></td>
        <!-- <td><%#= staffer.fullname %></td> -->

        <td class="staffer-w-md"><%= staffer.email %></td>
        <td class="staffer-w-sm-md"><%= staffer.phone %></td>

        <td class="staffer-w-sm">
          <% if staffer.scrape_date %>
            <%= staffer.scrape_date.strftime("%m/%d/%y") %>
          <% end %>
        </td>







          <!-- <% if advanced_and_up %>
          <td><%#= link_to 'Edit', edit_staffer_path(staffer) %></td>
          <% end %>
          <% if admin_only %>
          <td><%#= link_to 'Destroy', staffer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %> -->
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div class="close-button">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" frameborder="0"></iframe>
          </div>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
