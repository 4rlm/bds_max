<p id="notice"><%= notice %></p>


<table class="list-table table table-bordered table-hover text-nowrap table-striped">
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>
    <tbody>
        <tr>
            <td><%= @location.address %></td>
            <td><%= @location.latitude %></td>
            <td><%= @location.longitude %></td>
        </tr>
    </tbody>
</table>

<table class="list-table table table-bordered table-hover text-nowrap table-striped">
  <thead>
    <tr>
      <th colspan="4">Nearby Locations</th>
    </tr>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Distance</th>

    </tr>
  </thead>
    <tbody>
        <% for location in @location.nearbys(5000) %>
        <tr>
            <td><%= link_to location.address, location %></td>

            <td><%= link_to location.latitude, location %></td>
            <td><%= link_to location.longitude, location %></td>

            <td><%= location.distance.round(2) %> (mi)</td>
            <% end %>
        </tr>
    </tbody>
</table>

<div class="container-fluid">
<div class="row">
    <div class="col-md-12 col-md-offset-3">

    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=800x500&sensor=false&zoom=17&markers=#{@location.latitude}%2C#{@location.longitude}" %>

    </div>
</div>
</div>



<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
